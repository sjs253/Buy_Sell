<p id="notice"><%= notice %></p>

<h1>Commodities</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Sold</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @commodities.each do |commodity| %>
     
      <tr>
        <td><%= commodity.item_name %></td>
        <td><%= commodity.item_description %></td>
        <td><%= commodity.price %></td>
        <td><%= commodity.contact %></td>
        <td><%= commodity.email %></td>

        <td>
          <% if commodity.sold %>
            <%= commodity.sold %>
          <% end %>
        </td>
        
        <td>
            <% if !(commodity.sold) %>
              <%= link_to 'Show', commodity, :class => "btn btn-info"%></td>
            <% end %>
        <td>
           <% if commodity.email == current_user.email %>
              <%= link_to 'Edit', edit_commodity_path(commodity), :class =>"btn btn-warning"%>
           <% end %>
        </td>
        
        <td>
          <% if commodity.email == current_user.email %>
            <%= link_to 'Remove',commodity, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
  
      <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Commodity', new_commodity_path,:class => "btn btn-pill btn-success"%>
